{
  "name": "mcp-servers",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "servers/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:shared": "npm run build -w @mcp/rest-utils",
    "build:ensembl": "npm run build -w ensembl-mcp",
    "build:string": "npm run build -w string-mcp",
    "conda:build": "npm run conda:build:rest-utils && npm run conda:build:ensembl && npm run conda:build:string",
    "conda:build:rest-utils": "conda build conda-recipes/rest-utils --output-folder ./conda-bld",
    "conda:build:ensembl": "conda build conda-recipes/ensembl-mcp --output-folder ./conda-bld",
    "conda:build:string": "conda build conda-recipes/string-mcp --output-folder ./conda-bld",
    "conda:upload": "anaconda upload ./conda-bld/**/*.tar.bz2"
  },
  "description": "MCP servers monorepo with shared utilities"
}
